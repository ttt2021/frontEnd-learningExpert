}

.swiperItem {
  border-radius: 10rpx;
}

.swiper-mask {
  /* border: 1px solid #000; */
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  border-radius: 10rpx;
}

.swiper-desc {
  position: absolute;
  border-radius: 10rpx;
  top: 0;
  right: 0;
  left: 0;
  bottom: 0;
  z-index: 10;
  /* border: 1px solid #000; */
  color: #ffffff;
  font-weight: 700;
  /* margin: 0 auto; */
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  font-size: 30rpx;
  text-shadow: 0px 0px 16px #646d75;
  line-height: 480rpx;
  text-align: center;
}