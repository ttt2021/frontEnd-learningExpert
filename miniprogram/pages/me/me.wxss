  height: 100rpx;
  line-height: 100rpx;
  background-color: #fff;
  display: flex;
  justify-content: space-between;
  padding-left: 20rpx;
}

.column-name {
  display: flex;
}

.column-icon {
  margin-top: 10rpx;
  margin-right: 10rpx;
}

.column-pic {
  width: 40rpx;
  height: 40rpx;
}

