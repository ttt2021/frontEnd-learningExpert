page {
  background: #f6f6f6;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.userinfo {
  width: 100%;
  height: 300rpx;
  margin-top: -10rpx;
  /* border: 1px solid #000; */
  background: #A5D63F;
}

.userinfo-content {
  margin: 0 auto;
}

.userinfo-avatar {
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  background: #ccff99;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
}

.nickname {
  color: #fff;
  font-weight: bold;
}

.userinfo-nickname {
  background: #A5D63F;
  text-align: center;
}

